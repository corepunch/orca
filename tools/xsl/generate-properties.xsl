<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    <xsl:output method="text" encoding="UTF-8"/>
    
    <!-- Main template for properties header file generation -->
    <xsl:template match="/module">
        <xsl:text>// Generated by XSLT code generator&#10;</xsl:text>
        <xsl:text>// Component properties for </xsl:text>
        <xsl:value-of select="@name"/>
        <xsl:text>&#10;&#10;</xsl:text>
        
        <!-- Generate property definitions for each component -->
        <xsl:apply-templates select="component"/>
    </xsl:template>
    
    <!-- Component properties -->
    <xsl:template match="component">
        <xsl:if test="property">
            <xsl:text>// Properties for </xsl:text>
            <xsl:value-of select="@name"/>
            <xsl:text>&#10;</xsl:text>
            
            <xsl:apply-templates select="property"/>
            
            <xsl:text>&#10;</xsl:text>
        </xsl:if>
    </xsl:template>
    
    <!-- Property definition -->
    <xsl:template match="property">
        <xsl:text>#define PROP_</xsl:text>
        <xsl:call-template name="toUpper">
            <xsl:with-param name="text" select="../@name"/>
        </xsl:call-template>
        <xsl:text>_</xsl:text>
        <xsl:call-template name="toUpper">
            <xsl:with-param name="text" select="@name"/>
        </xsl:call-template>
        <xsl:text> "</xsl:text>
        <xsl:value-of select="@name"/>
        <xsl:text>"&#10;</xsl:text>
    </xsl:template>
    
    <!-- Utility template to convert text to uppercase -->
    <xsl:template name="toUpper">
        <xsl:param name="text"/>
        <xsl:value-of select="translate($text, 'abcdefghijklmnopqrstuvwxyz', 'ABCDEFGHIJKLMNOPQRSTUVWXYZ')"/>
    </xsl:template>
    
</xsl:stylesheet>
